<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Brands</h1>
  <div class="d-flex justify-content-end">
    <%= link_to 'New Brand', new_brand_path, class: "btn btn-success" %>

  </div>
  <table class="table table-hover  rounded mt-4 bg-light">
    <thead>
    <tr>
      <th class="text-center">Name</th>
      <th class="text-center">Actions</th>
    </tr>
    </thead>

    <tbody>
    <% @brands.each do |brand| %>
      <tr>
        <td class="text-center"><%= brand.name %></td>
        <td class="text-center">
          <%= link_to 'Show products', brand, class: "btn btn-info" %>
          <%= link_to 'Edit', edit_brand_path(brand), class: "btn btn-warning" %>
          <%= link_to 'Destroy', brand, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>

</div>
<br>


