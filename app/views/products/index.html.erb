<p id="notice"><%= notice %></p>

<h1>Products</h1>
<div class="d-flex flex-row-reverse">
  <%= link_to 'New Product', new_product_path, class: "btn btn-success"%>
</div>
<div class="row">
<% @products.each do |product| %>
    <div class="card my-2 col col-sm-4 rounded-lg">
      <img src="..." class="card-img-top" alt="...">
      <div class="card-body text-center">
        <h5 class="card-title"><%= product.title %></h5>
        <small class="text-muted d-block">Brand: <%= product.brand.name %></small>
        <small class="text-muted d-block">Category: <%= product.category.name %></small>
      </div>
      <div class="card-body p-0 pb-2">
        <p class="card-text"><%= product.description %></p>
        <p class="card-text">left: <%= product.in_stock %></p>
        <p class="card-text">price: $<%= product.price %></p>
        <%= link_to 'Show', product, class: "btn btn-primary" %>
        <%= link_to 'Edit', edit_product_path(product), class: "btn btn-info" %>
        <%= link_to 'Destroy', product, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
<!--        <button href="#" class="btn btn-primary">Go somewhere</button>-->
      </div>
    </div>

<% end %>
</div>
<br>


