<p id="notice"><%= notice %></p>

<ul>
  <% @product.images.each do |image| %>
    <li>
      <%= image_tag image, style: "width:50px" %>
    </li>
  <% end %>
</ul>


<p>
  <strong>Title:</strong>
  <%= @product.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  <strong>In stock:</strong>
  <%= @product.in_stock %>
</p>

<p>
  <strong>Brand:</strong>
  <%= @product.brand %>
</p>

<p>
  <strong>Category:</strong>
  <%= @product.category %>
</p>

<%= link_to 'Edit', edit_product_path(@product) %> |
