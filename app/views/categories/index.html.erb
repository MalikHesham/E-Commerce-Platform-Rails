<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Categories</h1>
<div class="d-flex justify-content-end">
  <%= link_to 'New Category', new_category_path, class: "btn btn-success" %>

</div>
  <table class="table table-hover rounded mt-4 bg-light">
    <thead>
    <tr>
      <th class="text-center">Name</th>
      <th class="text-center">Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td class="text-center"><%= category.name %></td>
        <td class="text-center">
          <%= link_to 'Show products', category, class: "btn btn-info" %>
          <%= link_to 'Edit', edit_category_path(category), class: "btn btn-warning" %>
          <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<br>

