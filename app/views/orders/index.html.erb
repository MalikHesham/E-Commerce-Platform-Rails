<h2 style="text-align: center">Orders History</h2>
<div class="container" style="max-width: 80vw">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>User</th>
        <th>Order Total</th>
        <th style="text-align: center">Actions</th>
        <th>Order creation date</th>
        <th>Order last update</th>
        <th>Status</th>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
      <h3></h3>
      <div>
        <tr class="align-middle">
          <td><%= order.user.name %></td>
          <td><%= order.total %></td>
          <td>
            <%= link_to 'Show', order, class:'btn btn-primary btn-sm' %>
            <a
              href="<%= edit_order_path(order) %>"
              class="btn btn-warning btn-sm <%= order.pending? ? '' : 'disabled' %>"
            >
              Edit
            </a>
            <!-- Button trigger modal -->
            <button
              type="button"
              class="btn btn-danger btn-sm <%= order.pending? ? '' : 'disabled' %> "
              data-bs-toggle="modal"
              data-bs-target="#order-<%= order.id %>"
            >
              Delete Order
            </button>

            <!-- Modal -->
            <div
              class="modal fade"
              id="order-<%= order.id %>"
              tabindex="-1"
              aria-labelledby="exampleModalLabel"
              aria-hidden="true"
            >
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Delete</h5>
                    <button
                      type="button"
                      class="btn-close btn-sm"
                      data-bs-dismiss="modal"
                      aria-label="Close"
                    ></button>
                  </div>

                  <div class="modal-body">
                    <strong>
                      Are you sure you want to delete this order?
                    </strong>
                  </div>
                  <div class="modal-footer">
                    <button
                      type="button"
                      class="btn btn-secondary btn-sm"
                      data-bs-dismiss="modal"
                    >
                      No
                    </button>

                    <%= link_to 'Delete', order, method: :delete, data: {
                    confirm: '' }, class: 'btn btn-danger btn-sm' %>
                  </div>
                </div>
              </div>
            </div>
          </td>
          <td><%= order.created_at.strftime('%a, %d %b %Y, %H:%M') %></td>
          <td><%= order.updated_at.strftime('%a, %d %b %Y, %H:%M') %></td>
          <% if order.delivered? %>
          <td style="color: green"><i class="fas fa-truck"></i> Delivered</td>
          <% elsif order.confirmed? %>
          <td style="color: green">
            <i class="fas fa-check-circle"></i> Confirmed
          </td>
          <% else %>
          <td style="color: goldenrod">
            <i class="fas fa-exclamation-circle"></i> Pending
          </td>
          <% end %>
        </tr>
      </div>
      <% end %>
    </tbody>
  </table>
</div>
